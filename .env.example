# Incrementum Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real values to version control

# =============================================================================
# DJANGO/API CONFIGURATION
# =============================================================================

# Django Secret Key - Generate a secure random key
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-very-long-secret-key-here-make-it-at-least-50-chars-long

# Debug mode - Set to false in production
DEBUG=true

# Allowed hosts - Update with your actual domains
ALLOWED_HOSTS=localhost,127.0.0.1,api.incrementum.duckdns.org

# CORS Configuration - Frontend URLs that can access the API
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://client.incrementum.duckdns.org

# CSRF Configuration - Trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000,https://api.incrementum.duckdns.org,https://client.incrementum.duckdns.org

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
DATABASE_NAME=Incr_DB
DATABASE_USER=Incr
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# For Docker Compose (when running locally)
POSTGRES_PASSWORD=your-secure-database-password

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Finnhub API Token - Get from https://finnhub.io/
# Required for stock data functionality
FINNHUB_TOKEN=your-finnhub-api-token

# =============================================================================
# KEYCLOAK/AUTHENTICATION CONFIGURATION
# =============================================================================

# Keycloak Configuration
KEYCLOAK_REALM_URL=https://your-keycloak-server/realms/your-realm
KEYCLOAK_CLIENT_ID=incrementum-client
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Base URLs for the frontend
VITE_API_BASE_URL=http://localhost:8000
VITE_DASH_BASE_URL=http://localhost:8000

# =============================================================================
# PRODUCTION/KUBERNETES OVERRIDES
# =============================================================================
# These are used when deploying to Kubernetes
# Update these to match your actual production domains

# Production API URL
PROD_API_URL=https://api.incrementum.duckdns.org
PROD_CLIENT_URL=https://client.incrementum.duckdns.org

# Docker Image Configuration
IMAGE_TAG=latest
DOCKER_REGISTRY=nhowell02

# =============================================================================
# DEVELOPMENT HELPERS
# =============================================================================

# Set to 'development' for local dev, 'production' for prod
NODE_ENV=development
DJANGO_ENV=development

# =============================================================================
